[server]
SECRET_KEY = change-this-to-a-random-string
DEBUG = false
# Production settings (make run)
HOST = 0.0.0.0
PORT = 5100
# Development settings (make rundev)
DEV_HOST = 127.0.0.1
DEV_PORT = 5100

[database]
PATH = instance/gatekeeper.sqlite3

[mail]
SMTP_SERVER = smtp.example.com
SMTP_PORT = 587
SMTP_USE_TLS = true
SMTP_USERNAME =
SMTP_PASSWORD =
MAIL_SENDER = noreply@example.com

[auth]
MAGIC_LINK_EXPIRY_SECONDS = 3600
ADMIN_USERNAMES = admin@example.com


[server]
# SECRET_KEY is auto-generated and stored in the database
DEBUG = false
# Production settings (make run)
HOST = 0.0.0.0
PORT = 5100
# Development settings (make rundev)
DEV_HOST = 127.0.0.1
DEV_PORT = 5100

[database]
PATH = instance/gatekeeper.sqlite3

# Send emails via outbox (recommended)
[outbox]
URL = http://localhost:5200
API_KEY = outbox_api_key_here
[mail]
MAIL_SENDER = noreply@example.com

# OR send emails via direct SMTP (comment out [outbox] section above)
#[mail]
#SMTP_SERVER = smtp.example.com
#SMTP_PORT = 587
#SMTP_USE_TLS = true
#SMTP_USERNAME =
#SMTP_PASSWORD =
#MAIL_SENDER = noreply@example.com

[auth]
MAGIC_LINK_EXPIRY_SECONDS = 3600
ADMIN_EMAILS = admin@example.com

# Enable when running behind a reverse proxy (Caddy, nginx, etc.)
#[proxy]
#X_FORWARDED_FOR = 1
#X_FORWARDED_PROTO = 1
#X_FORWARDED_HOST = 1
#X_FORWARDED_PREFIX = 0

